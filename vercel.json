{
  "version": 2,
  "name": "roomchatapp",
  "builds": [
    {
      "src": "apps/server/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/server/dist/index.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "apps/server/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/server/dist/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
